{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "Default": "Data Source=condiva.db"
    },
    "JwtSettings": {
        "Key": "__SET_VIA_SECRET_PROVIDER__",
        "Issuer": "Condiva",
        "Audience": "Condiva",
        "AccessTokenLifetimeMinutes": 15
    },
    "SecuritySettings": {
        "Pepper": "__SET_VIA_SECRET_PROVIDER__"
    },
    "MailService": {
        "AppMail": "noreply@example.com",
        "Host": "smtp.example.com",
        "Port": 587,
        "SenderName": "Condiva",
        "Username": "smtp-user",
        "Password": "__SET_VIA_SECRET_PROVIDER__",
        "UseSsl": true
    },
    "AuthSettings": {
        "FrontendUrl": "https://app.example.com",
        "ClearCookiesOnRefreshFailure": false
    },
    "GoogleAuth": {
        "ClientId": "__SET_VIA_SECRET_PROVIDER__",
        "AllowedHostedDomain": ""
    },
    "AuthCookies": {
        "RequireSecure": true,
        "AccessToken": {
            "Name": "__Host-condiva_at",
            "Path": "/",
            "HttpOnly": true,
            "SameSite": "Lax",
            "MaxAgeMinutes": 15
        },
        "RefreshToken": {
            "Name": "__Secure-condiva_rt",
            "Path": "/api/auth/refresh",
            "HttpOnly": true,
            "SameSite": "Strict",
            "MaxAgeMinutes": 43200
        },
        "CsrfToken": {
            "Name": "__Host-condiva_csrf",
            "Path": "/",
            "HttpOnly": false,
            "SameSite": "Strict",
            "MaxAgeMinutes": 43200
        }
    },
    "Idempotency": {
        "Enabled": true,
        "ReplayTtlHours": 24,
        "MinKeyLength": 8,
        "MaxKeyLength": 128
    },
    "TemplateSettings": {
        "BasePath": "templates"
    },
    "NotificationProcessing": {
        "Enabled": true,
        "PollIntervalSeconds": 5,
        "BatchSize": 100
    },
    "RefreshTokenSettings": {
        "RefreshTokenLifetimeDays": 30
    },
    "RateLimit": {
        "Rules": {
            "Login": {
                "MaxUserAttempts": 5,
                "MaxIpAttempts": 20,
                "AttemptWindow": "00:15:00",
                "LockDuration": "00:05:00"
            },
            "Register": {
                "MaxUserAttempts": 3,
                "MaxIpAttempts": 10,
                "AttemptWindow": "00:30:00",
                "LockDuration": "00:10:00"
            },
            "VerifyEmail": {
                "MaxUserAttempts": 5,
                "MaxIpAttempts": 15,
                "AttemptWindow": "01:00:00",
                "LockDuration": "00:15:00"
            },
            "ResetPassword": {
                "MaxUserAttempts": 3,
                "MaxIpAttempts": 10,
                "AttemptWindow": "00:30:00",
                "LockDuration": "00:15:00"
            },
            "ExternalLogin": {
                "MaxUserAttempts": 5,
                "MaxIpAttempts": 20,
                "AttemptWindow": "00:15:00",
                "LockDuration": "00:05:00"
            }
        },
        "TrustedProxyIps": [],
        "RequireRedis": false,
        "AuthEndpoint": {
            "PermitLimit": 30,
            "WindowSeconds": 60
        }
    },
    "CloudFlareR2": {
        "AccountId": "ad10b4bf4339a6069ac1d672bbe1f278",
        "Bucket": "condiva-dev",
        "Endpoint": "https://ad10b4bf4339a6069ac1d672bbe1f278.r2.cloudflarestorage.com",
